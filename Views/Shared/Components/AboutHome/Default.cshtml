@model IEnumerable<CoreCnice.Models.NewsModelCat>
@using CoreCnice.Connect;
@using CoreCnice.Domain;
@using CoreCnice.UtilsCs;
@*@model List<CoreCnice.Domain.ESHOP_AD_ITEM>*@
@{
    clsFormat cl = new clsFormat();
}

<section class="seo_features_one sec_pad" style="background:hsl(0deg 0% 96%)">
    <div class="container">
        <div class="row">
            @foreach (var category in Model.ToList())
            {
                string linkurl = "";

                if (!String.IsNullOrEmpty(linkurl))
                {
                    linkurl = category.NEWS_URL;
                }
                else
                {
                    linkurl = "/" + category.CAT_SEO_URL + "/" + category.NEWS_SEO_URL;
                }

                string linkimg = "";
                string linkimg1 = "";
                string linkimgNews = "";
                string linkimgNews1 = "";
                if (!String.IsNullOrEmpty(category.NEWS_IMAGE1))
                {
                    linkimg = "/UploadImages/Data/News/" + category.NEWS_ID + "/" + category.NEWS_IMAGE1;
                    linkimgNews = "/UploadImages/Data/News/" + category.NEWS_ID + "/thumb-" + category.NEWS_IMAGE1;
                    if (Utils.checkfileExit(linkimgNews) == true)
                    {
                        linkimg = linkimgNews;
                    }
                }
                else
                {
                    linkimg = "/images/noimg.jpg";
                }

                if (!String.IsNullOrEmpty(category.NEWS_IMAGE2))
                {
                    linkimg1 = "/UploadImages/Data/News/" + category.NEWS_ID + "/" + category.NEWS_IMAGE2;
                    linkimgNews1 = "/UploadImages/Data/News/" + category.NEWS_ID + "/thumb-" + category.NEWS_IMAGE2;
                    if (Utils.checkfileExit(linkimgNews1) == true)
                    {
                        linkimg1 = linkimgNews;
                    }
                }
                else
                {
                    linkimg1 = "/images/noimg.jpg";
                }
                string fileName = "wwwroot/UploadImages/Data/News/" + category.NEWS_ID + "/" + category.NEWS_FILEHTML;
                <div class="col-lg-6  d-flex align-items-center">
                    <div class="seo_features_content">
                        <h2>@Html.Raw(category.NEWS_TITLE)</h2>
                        @Html.Raw(cl.ReadFile(fileName.Replace("<p>", "").Replace("</p>", "")))
                    </div>
                </div>
            }
            <div class="col-lg-6">
                <div class="promo-content-wrap">
                    @await Component.InvokeAsync("BannerAbout", new { Position = 1 })
                </div>
            </div>

        </div>
    </div>
</section>