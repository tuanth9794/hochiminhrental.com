@model IEnumerable<CoreCnice.Domain.ESHOP_PROPERTIES>
@using CoreCnice.Connect;
@using CoreCnice.UtilsCs;
@using CoreCnice.Servicer;
@{
    CategoryServices ct = new CategoryServices();
    clsFormat cl = new clsFormat();
    decimal giamax = 0;
    //int id = ViewBag.Id;
    int lang = Utils.CIntDef(ViewBag.Langue);
    int tien = Utils.CIntDef(ViewBag.Money);
    int tygia = Utils.CIntDef(ViewBag.USD);
    int chonngay = Utils.CIntDef(ViewBag.ChonNgay);
    string nameDay = "";
    string nameMonth = "";
    if (tien == 1)
    {
        giamax = Utils.CDecDef(ViewBag.maxPrice);
    }
    else
    {
        giamax = Utils.CDecDef(ViewBag.maxPrice) % Utils.CDecDef(tygia);
    }

    if(lang == 1)
    {
        nameDay = "Giá Ngày";
        nameMonth = "Giá Tháng";
    }
    else
    {
        nameDay = "Day Price";
        nameMonth = "Monthly Price";
    }
}


<div id="priceRangeSelected" style="text-align: left;font-size: 12px;">Giá từ<span id="minPrice" style="color:#ff0000;margin:0px 5px"></span>đến<span id="maxPrice" style="color:#ff0000;margin:0px 5px"></span></div>
@*<input type="text" id="rangePrimary" class="js-range-slider" name="my_range" value="" />*@
<input type="text" id="rangePrimary" class="js-range-slider" name="my_range" value=""
       data-type="double"
       data-min="0"
       data-max="@giamax"
       data-from="0"
       data-to="@giamax"
       data-grid="true" />


<style>
    .irs {
        width: 100%;
    }

    .irs-with-grid .irs-grid, .irs-max, .irs-min {
        display: none !important;
    }

    .irs--flat .irs-bar {
        top: 25px;
        height: 12px;
        /*background-color: hsl(56, 28%, 55%) !important;*/
    }

    .irs--flat .irs-from, .irs--flat .irs-to, .irs--flat .irs-single {
        color: hsl(0deg 0% 100%);
        font-size: 10px;
        line-height: 1.333;
        text-shadow: none;
        padding: 1px 5px;
        background-color: hsl(56, 28%, 55%) !important;
        border-radius: 4px;
    }

    .irs--flat .irs-handle > i:first-child {
        position: absolute;
        display: block;
        top: -2px !important;
        left: 0% !important;
        width: 20px !important;
        height: 20px !important;
        border-radius: 100% !important;
        /* height: 100%; */
        margin-left: 0px !important;
        background-color: hsl(0deg 0% 55%) !important;
    }

    .irs-from, .irs-to {
        display: none !important;
    }
</style>

