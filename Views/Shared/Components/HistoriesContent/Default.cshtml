@model IEnumerable<CoreCnice.Models.NewsModelCat>
@using CoreCnice.Connect;
@using CoreCnice.UtilsCs;
@{
    int _count = 0;
    string clads = "";
}

@foreach (var category in Model.ToList())
{

    clsFormat cl = new clsFormat();
    string linkimg = "";

    string linkurl = "";

    if (!String.IsNullOrEmpty(category.NEWS_URL))
    {
        linkurl = category.NEWS_URL;
    }
    else
    {
        linkurl = "/" + category.CAT_SEO_URL + "/" + category.NEWS_SEO_URL;

    }

    string linkimgNews = "";
    if (!String.IsNullOrEmpty(category.NEWS_IMAGE1))
    {
        linkimg = "/UploadImages/Data/News/" + category.NEWS_ID + "/" + category.NEWS_IMAGE1;
        linkimgNews = "/UploadImages/Data/News/" + category.NEWS_ID + "/thumb-" + category.NEWS_IMAGE1;
        if (Utils.checkfileExit(linkimgNews) == true)
        {
            linkimg = linkimgNews;
        }
    }
    else
    {
        linkimg = "/images/noimg.jpg";
    }

    _count++;
    if (_count % 2 == 0)
    {
        clads = "flex-row-reverse";
    }
    else
    {
        clads = "";
    }

    <div class="setup_item row @clads">
        <div class="col-md-5 setup_img wow fadeInLeft" data-wow-delay="0.2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeInLeft;">
            <img src="@linkimg" alt="" style="width:100%">
        </div>
        <div class="col-md-2 s_number">
            <div class="round">@_count</div>
        </div>
        <div class="col-md-5">
            <div class="setup_content wow fadeInRight" data-wow-delay="0.4s" style="visibility: visible; animation-delay: 0.4s; animation-name: fadeInRight;">
                <h5>@Html.Raw(category.NEWS_TITLE)</h5>
                <p style="text-align:justify">@Html.Raw(category.NEWS_DESC)</p>
            </div>
        </div>
        <div class="line bottom_half wow height" data-wow-delay="0.5s" style="visibility: visible; animation-delay: 0.5s; animation-name: height;"></div>
    </div>
}
