@using CoreCnice.Domain;
@using CoreCnice.Connect;
@using CoreCnice.UtilsCs;
@model CoreCnice.Domain.ESHOP_CATEGORIES;

@{
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
    BulSoftCmsConnectContext _context = new BulSoftCmsConnectContext();
    var Meta = _context.ESHOP_CONFIG.SingleOrDefault(m => m.CONFIG_ID == 1);
    int lang = Utils.CIntDef(ViewBag.Langue);
}

@if (lang == 1)
{
    <nav aria-label="breadcrumb" class="breadcrumb-nav mb-3">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page"><a href="san-pham">Liên hệ</a></li>
            </ol>
        </div><!-- End .container -->
    </nav>
}
else
{
    <nav aria-label="breadcrumb" class="breadcrumb-nav mb-3">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page"><a href="/lien-he">Contact</a></li>
            </ol>
        </div><!-- End .container -->
    </nav>
}

<!-- Section: Have Any Question -->
<section class="contact_info_area sec_pad" style="padding:50px 0px">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 pr-0">
                @Html.Raw(Meta.CONFIG_FIELD4)
            </div>
            <div class="col-lg-8 offset-lg-1">
                <div class="contact_form">
                    @if (lang == 1)
                    {
                        <h2 class="f_p f_size_22 f_600 mb_20" style="font-size: 14px;font-weight: bold;">LIÊN HỆ</h2>
                        <p>Quý khách vui lòng điền thông tin vào mẫu bên dưới và gửi những thắc mắc cho EUREKA, chúng tôi sẽ phản hồi email của Quý khách trong thời gian sớm nhất</p>
                        <div class="contact_form_box" id="contact_form">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="col-lg-12">
                                        <div class="form-group text_box">
                                            <input type="text" id="name" name="name" placeholder="Họ và tên">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group text_box">
                                            <input type="text" name="email" id="emailkhach" placeholder="Địa chỉ email">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group text_box">
                                            <input type="text" id="phone" name="phone" placeholder="Số điện thoại">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group text_box">
                                        <textarea name="message" id="noidungcantuvan" cols="30" rows="10" placeholder="Nội dung liên hệ ..."></textarea>
                                    </div>
                                </div>
                            </div>
                            <button type="button" class="btn_three" id="btndangky5vn" style="background:#00a29a !important;border:none">Gửi thông tin liên hệ</button>
                        </div>
                    }
                    else
                    {
                        <h2 class="f_p f_size_22 f_600 mb_20" style="font-size: 14px;font-weight: bold;">CONTACT</h2>
                        <p>Please fill in the form below and send your questions to EUREKA, we will respond to your email as soon as possible.</p>
                        <div class="contact_form_box" id="contact_form">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="row">
                                        <div class="col-lg-12" style="display:none">
                                            <div class="form-group text_box">
                                                <input type="text" id="tieudelienhe" name="name" placeholder="tiêu đề liên hệ" value="Gửi liên hệ từ trang liên hệ">
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-group text_box">
                                                <input type="text" id="name" name="name" placeholder="First and last name">
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-group text_box">
                                                <input type="text" name="email" id="emailkhach" placeholder="Email address">
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-group text_box">
                                                <input type="text" id="phone" name="phone" placeholder="phone number">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group text_box">
                                        <textarea name="message" id="noidungcantuvan" cols="30" rows="10" placeholder="Contact content ..."></textarea>
                                    </div>
                                </div>
                            </div>
                            <button type="button" class="btn_three" id="btndangky5en" style="background:#00a29a !important;border:none">Send Contact</button>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>
<style>
    .text_box textarea {
        height: 204px;
    }
</style>


