                                                    <option value="10">District 10</option>
                                                    <option value="6">Binh Thanh District</option>
                                                    <option value="8">Phu Nhuan District</option>
                                                    <option value="9">Tan Binh District</option>
                                                </select>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                      <select name="tinhthanh" class="select  form-control">
                                                <option value="1">Province/City</option>
                                                <option value="2">Ho Chi Minh</option>                                            
                                            </select>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Address</label>
                                    <input type="text" placeholder="" class="form-control diachi" value="@Model.CUSTOMER_ADDRESS"/>
                                </div>
                              
                                  <div class="form-group">
                                    <label for="inputEmail3" class="col-md-2 control-label">Sex</label>
                                    <div class="col-md-10">
                                        <div class="row">
                                            <div class="col-md-3">
                                                @Html.RadioButtonFor(model => model.CUSTOMER_SEX, "1", new { id = 1, @checked = "checked", @class = "radio" })
                                                Female
                                            </div>
                                            <div class="col-md-3">
                                                @Html.RadioButtonFor(model => model.CUSTOMER_SEX, "2", new { id = 2, @class = "radio" })
                                                Male
                                            </div>
                                            <div class="col-md-3">
                                                @Html.RadioButtonFor(model => model.CUSTOMER_SEX, "3", new { id = 3, @class = "radio" })
                                                Orther
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr class="line" />  
                                <div class="row">
                                    <div class="col-lg-12">
