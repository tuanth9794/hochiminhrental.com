                                            <label class="form-label">Date of birth</label>
                                            <div class="row gx-2">
                                                <input class="form-control thoigiandonvao" type="date" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                          <div class="form-group">
                                    <label for="inputEmail3" class="col-md-2 control-label">Account Type</label>
                                    <div class="col-md-10">
                                        <div class="row">
                                            <div class="col-md-3">
                                                @Html.RadioButtonFor(model => model.CUSTOMER_SHOWTYPE, "1", new { id = 1, @checked = "checked", @class = "radio" })
                                                Client
                                            </div>
                                            <div class="col-md-3">
                                                @Html.RadioButtonFor(model => model.CUSTOMER_SHOWTYPE, "2", new { id = 2, @class = "radio" })
                                               Business
                                            </div>
                                            <div class="col-md-3">
                                                @Html.RadioButtonFor(model => model.CUSTOMER_SHOWTYPE, "3", new { id = 3, @class = "radio" })
                                                Orther
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr class="line" />                               
                                <div class="mb-4">
                                    <label class="form-label">Description of information</label>
                                    <textarea placeholder="" class="form-control mota" rows="4"></textarea>
