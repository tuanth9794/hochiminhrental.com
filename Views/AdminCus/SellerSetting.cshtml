                                <input type="hidden" asp-for="CUSTOMER_IP" value="@Model.CUSTOMER_IP" />
                                <input type="hidden" asp-for="CUSTOMER_KHUVU" value="@Model.CUSTOMER_KHUVU" />
                                <input type="hidden" asp-for="CUSTOMER_LOAICANHO" value="@Model.CUSTOMER_LOAICANHO" />
                                <input type="hidden" asp-for="CUSTOMER_SHOWTYPE" value="@Model.CUSTOMER_SHOWTYPE" />
                                <input type="hidden" asp-for="CUSTOMER_UN" value="@Model.CUSTOMER_UN" />
                                <input type="hidden" asp-for="CUSTOMER_PUBLISHDATE" value="@Model.CUSTOMER_PUBLISHDATE" />
            <section class="content-main">
                <div class="row">
                <div class="col-lg-9">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Account information</h4>
                        </div>
                        <div class="card-body">
                             @if (!string.IsNullOrEmpty(ViewBag.Error))
                                {
                                    <div class="callout callout-info">
                                        <p style="color:#ffffff">
                                            @Html.Raw(ViewBag.Error)
                                        </p>
                                    </div>
                                }
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">First and last name</label>
                                    <input type="text" placeholder="" class="form-control name" asp-for="CUSTOMER_FULLNAME"/>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-4">
                                            <label class="form-label">Phone number</label>
                                            <div class="row gx-2">
                                                <input placeholder="" type="text" class="form-control sodt" asp-for="CUSTOMER_PHONE1"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-4">
                                            <label class="form-label">Email address</label>
                                            <input placeholder="" type="text" class="form-control emailkhach" asp-for="CUSTOMER_EMAIL"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                          <select name="quanhuyen" class="form-select form-select-lg form-control" aria-label=".form-select-lg example">
                                                    <option selected>District</option>
                                                    <option value="1">District 1</option>
                                                    <option value="2">District 2</option>
                                                    <option value="3">District 3</option>
