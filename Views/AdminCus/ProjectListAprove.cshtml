@using CoreCnice.UtilsCs;
@model IEnumerable<CoreCnice.Models.NewsModelCat>
@{
    Layout = "~/Views/Shared/_LayoutCus.cshtml";
    clsFormat cl = new clsFormat();
    int lang = Utils.CIntDef(ViewBag.Langue);
    int tygia = Utils.CIntDef(ViewBag.USD);
    int tien = Utils.CIntDef(ViewBag.Money);
    string donvi = "";
    string donviEn = "";
}

<style>
    .form-control, .form-select {
        border: 1px solid #c3c4c8 !important;
    }
</style>
<link rel="stylesheet" href="~/Admin/dist/css/AdminLTE.css">
<link rel="stylesheet" href="~/Admin/bower_components/Ionicons/css/ionicons.css">
@{
    if (lang == 1)
    {
        <section class="content-main">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Dự án đang có</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @{
                                    if (Model.ToList().Count > 0)
                                    {
                                        @foreach (var itemCatChild in Model.ToList())
                                        {
                                            @Html.Partial("~/Views/Catalog/_ProductOne.cshtml", itemCatChild)
                                        }
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
    else
    {
        <section class="content-main">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Project List</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @{
                                    if (Model.ToList().Count > 0)
                                    {
                                        @foreach (var itemCatChild in Model.ToList())
                                        {
                                            @Html.Partial("~/Views/Catalog/_ProductOne.cshtml", itemCatChild)
                                        }
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
}

<style>
    span {
        color: #000000;
    }

    .itemside .title {
        display: block;
        margin-bottom: 5px;
        font-size: 14px;
        font-weight: normal;
    }

    .item {
        position: relative;
    }
</style>