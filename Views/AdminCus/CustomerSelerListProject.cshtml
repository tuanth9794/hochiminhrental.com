@using CoreCnice.UtilsCs;
@model IEnumerable<CoreCnice.Domain.ESHOP_NEWS>
@{
    Layout = "~/Views/Shared/_LayoutCus.cshtml";
    clsFormat cl = new clsFormat();
    int lang = Utils.CIntDef(ViewBag.Langue);
    int tygia = Utils.CIntDef(ViewBag.USD);
    int tien = Utils.CIntDef(ViewBag.Money);
    string donvi = "";
    string donviEn = "";
}

<style>
    .form-control, .form-select {
        border: 1px solid #c3c4c8 !important;
    }
</style>
<link rel="stylesheet" href="~/Admin/dist/css/AdminLTE.css">
<link rel="stylesheet" href="~/Admin/bower_components/Ionicons/css/ionicons.css">
@{
    if (lang == 1)
    {
        <div class="content-header clearfix" style="display: block;">
            <h1 class="pull-left">
                Danh sách dự án
            </h1>          
        </div>

        <section class="content-main">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Danh sách dự án đang cho thuê</h4>
                        </div>
                        <div class="card-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Thông tin</th>
                                        <th>Tình trạng</th>
                                        <th>Ngày đăng</th>
                                        <th class="text-end">Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @{
                                        if (Model.ToList().Count > 0)
                                        {
                                            @foreach (var itemCatChild in Model.ToList())
                                            {
                                                <tr>
                                                    <td width="40%">
                                                        <a href="#" class="itemside">
                                                            <div class="left">
                                                                <img src="/UploadImages/Data/News/@itemCatChild.NEWS_ID/@itemCatChild.NEWS_IMAGE1" class="img-sm img-avatar" alt="@itemCatChild.NEWS_TITLE">
                                                            </div>
                                                            <div class="info pl-3">
                                                                <h6 class="mb-2 title">@itemCatChild.NEWS_TITLE</h6>
                                                                <small class="text-muted">Mã : @itemCatChild.NEWS_CODE</small>
                                                            </div>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        @if (itemCatChild.NEWS_SHOWTYPE == 0)
                                                        {
                                                            <span class="badge rounded-pill alert-success">Chưa thuê</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge rounded-pill alert-success">Đã thuê</span>
                                                        }

                                                    </td>
                                                    <td>@Html.Raw(itemCatChild.NEWS_PUBLISHDATE.Value.ToShortDateString())</td>
                                                    <td class="text-end">
                                                        <a href="/AdminCus/SellerPostEdit/@itemCatChild.NEWS_ID" class="btn btn-sm btn-brand rounded font-sm mt-15">Sửa</a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                            </table>

                            <!-- itemlist  .// -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
    else
    {
        <div class="content-header clearfix" style="display: block;">
            <h1 class="pull-left">
                List Project
            </h1>
            <div class="pull-right">
               <a href="/AdminCus/SellerPost" name="save" class="btn btn-sm bg-green">
                <i class="fa fa-fw fa-file-picture-o"></i>
                Thêm mới dự án
            </a>       
            </div>
        </div>
        <section class="content-main">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Project List</h4>
                        </div>
                        <div class="card-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Information</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                        <th class="text-end">Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @{
                                        if (Model.ToList().Count > 0)
                                        {
                                            @foreach (var itemCatChild in Model.ToList())
                                            {
                                                <tr>
                                                    <td width="40%">
                                                        <a href="#" class="itemside">
                                                            <div class="left">
                                                                <img src="/UploadImages/Data/News/@itemCatChild.NEWS_ID/@itemCatChild.NEWS_IMAGE1" class="img-sm img-avatar" alt="@itemCatChild.NEWS_TITLE">
                                                            </div>
                                                            <div class="info pl-3">
                                                                <h6 class="mb-2 title">@itemCatChild.NEWS_TITLE</h6>
                                                                <small class="text-muted">Mã : @itemCatChild.NEWS_CODE</small>
                                                            </div>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        @if (itemCatChild.NEWS_SHOWTYPE == 0)
                                                        {
                                                            <span class="badge rounded-pill alert-success">Chưa thuê</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge rounded-pill alert-success">Đã thuê</span>
                                                        }

                                                    </td>
                                                    <td>@Html.Raw(itemCatChild.NEWS_PUBLISHDATE.Value.ToShortDateString())</td>
                                                    <td class="text-end">
                                                        <a href="/AdminCus/SellerPostEdit/@itemCatChild.NEWS_ID" class="btn btn-sm btn-brand rounded font-sm mt-15">Edit</a>
                                                    </td>
                                                </tr>

                                            }

                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
}

<style>
    span {
        color: #000000;
    }
    .itemside .title {
    display: block;
    margin-bottom: 5px;
    font-size: 14px;
    font-weight: normal;
}
</style>