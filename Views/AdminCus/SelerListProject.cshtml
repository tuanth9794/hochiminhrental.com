@using CoreCnice.UtilsCs;
@model IEnumerable<CoreCnice.Models.NewsModelCat>
@{
    Layout = "~/Views/Shared/_LayoutSeller.cshtml";
    clsFormat cl = new clsFormat();
    int lang = Utils.CIntDef(ViewBag.Langue);
    int tygia = Utils.CIntDef(ViewBag.USD);
    int tien = Utils.CIntDef(ViewBag.Money);
    string donvi = "";
    string donviEn = "";
}

<style>
    .form-control, .form-select {
        border: 1px solid #c3c4c8 !important;
    }
</style>
<link rel="stylesheet" href="~/Admin/dist/css/AdminLTE.css">
<link rel="stylesheet" href="~/Admin/bower_components/Ionicons/css/ionicons.css">
@{
    if (lang == 1)
    {
        <div class="content-header clearfix" style="display: block;">
            <h1 class="pull-left">
                Danh sách dự án
            </h1>
            <div class="pull-right">
                <a href="/AdminCus/SellerPost" name="save" class="btn btn-sm bg-green">
                    <i class="fa fa-fw fa-file-picture-o"></i>
                    Thêm mới dự án
                </a>
            </div>
        </div>

        <section class="content-main">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Danh sách dự án đang cho thuê</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @{
                                    if (Model.ToList().Count > 0)
                                    {
                                        @foreach (var itemCatChild in Model.ToList())
                                        {
                                            @Html.Partial("~/Views/AdminCus/_ProductOne.cshtml", itemCatChild)
                                        }
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
    else
    {
        <div class="content-header clearfix" style="display: block;">
            <h1 class="pull-left">
                List Project
            </h1>
            <div class="pull-right">
                <a href="/AdminCus/SellerPost" name="save" class="btn btn-sm bg-green">
                    <i class="fa fa-fw fa-file-picture-o"></i>
                    Add Project
                </a>
            </div>
        </div>
        <section class="content-main">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Project List</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @{
                                    if (Model.ToList().Count > 0)
                                    {
                                        @foreach (var itemCatChild in Model.ToList())
                                        {
                                            @Html.Partial("~/Views/AdminCus/_ProductOne.cshtml", itemCatChild)
                                        }
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            @if (lang == 1)
                            {
                                <h5 class="modal-title" id="exampleModalLabel">Khách hàng gợi ý</h5>
                            }
                            else
                            {
                                <h5 class="modal-title" id="exampleModalLabel">Recommended by customers</h5>
                            }

                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row" id="bookLoad">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary closemd" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
}

<style>
    span {
        color: #000000;
    }

    .itemside .title {
        display: block;
        margin-bottom: 5px;
        font-size: 14px;
        font-weight: normal;
    }
</style>

<style>
    span {
        color: #000000;
    }

    .itemside .title {
        display: block;
        margin-bottom: 5px;
        font-size: 14px;
        font-weight: normal;
    }

    .item {
        position: relative;
    }
</style>




<script>
    $(".modalclick").click(function() {
        $('#exampleModal').modal('show');
    });
    $(".closemd").click(function() {
        $('#exampleModal').modal('hide');
    });
</script>