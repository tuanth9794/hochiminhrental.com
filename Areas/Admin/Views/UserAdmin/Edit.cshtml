@model CoreCnice.Domain.ESHOP_USER

@{
    ViewData["Title"] = "Chỉnh sửa " + Model.USER_NAME;
     Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .radio {
        float: left !important;
        margin-right: 10px !important
    }
</style>

@using (Html.BeginForm())
{
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Chỉnh sửa thông tin - <span style="color:#0026ff"> @Model.USER_NAME</span>
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a href="~/Admin/UserAdmin">Về danh sách</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                Lưu chỉnh sửa
            </button>        
            <button type="submit" name="DeleteCatConfirmed" class="btn bg-red" formmethod="post" formaction="/Admin/UserAdmin/DeleteConfirmed?id=@Model.USER_ID">
                <span class="glyphicon glyphicon-trash"></span>
                Xóa
            </button>
        </div>

    </div>
    <section class="content">
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="callout callout-info">
                <h4>Thông báo</h4>
                <p>
                    @Html.Raw(ViewBag.Error)
                </p>
            </div>
        }
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" class="form-control" asp-for="USER_ID">
        @*<input type="hidden" asp-for="NEWS_ID" value="@Model.NEWS_ID" />*@
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Thông tin chung</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->

                    <div class="box-body">
                        <div class="form-group">
                            <label for="exampleInputPassword1">Tên người dùng</label>
                            <input type="text" class="form-control" asp-for="USER_NAME">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tài khoản</label>
                            <input type="text" class="form-control" asp-for="USER_UN">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Mật khẩu</label>
                            <input type="text" class="form-control" asp-for="USER_PW">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Ngày tạo</label>
                            <input type="text" class="form-control" asp-for="USER_PUBLISHDATE" readonly="readonly">
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-md-2 control-label" style="padding-left:0px">Kích hoạt</label>
                            <div class="col-md-10">
                                <div class="col-md-3">
                                    @Html.RadioButtonFor(model => model.USER_ACTIVE, "0", new { id = 0, @checked = "checked", @class = "radio" })
                                    Không
                                </div>
                                <div class="col-md-3">
                                    @Html.RadioButtonFor(model => model.USER_ACTIVE, "1", new { id = 1, @class = "radio" })
                                    Có
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Phân loại nhóm</label>
                            <select asp-for="GROUP_ID" class="form-control" asp-items="@(new SelectList(Model.GroupList,"GROUP_ID","GROUP_NAME"))"></select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
