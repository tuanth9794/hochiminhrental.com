@model CoreCnice.Domain.ESHOP_ONLINE

@{
    ViewData["Title"] = "Thêm mới hỗ trợ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .radio {
        float: left !important;
        margin-right: 10px !important
    }
</style>
@using (Html.BeginForm(FormMethod.Post, new { enctype = "multipart/form-data", data_ajax = "false" }))
{

    <div class="content-header clearfix">
        <h1 class="pull-left">
            Chỉnh sửa thông tin
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                Lưu chỉnh sửa
            </button>
        </div>
    </div>
    <section class="content">
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="callout callout-info">
                <h4>Thông báo</h4>
                <p>
                    @Html.Raw(ViewBag.Error)
                </p>
            </div>
        }
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*<input type="hidden" asp-for="NEWS_ID" value="@Model.NEWS_ID" />*@
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Thông tin cấu hình</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->

                    <div class="box-body">
                        <div class="form-group">
                            <label for="exampleInputPassword1">Miêu tả</label>
                            <input type="text" class="form-control" asp-for="ONLINE_DESC">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Link</label>
                            <input type="text" class="form-control" asp-for="ONLINE_NICKNAME">
                        </div>
                        @*<div class="form-group">
                                <label for="exampleInputEmail1">Điện thoại</label>
                                <input type="text" class="form-control" asp-for="ONLINE_COMBACK">
                            </div>*@
                        <div class="form-group">
                            <label for="exampleInputPassword1">Thứ tự hiển thị</label>
                            <input type="text" class="form-control" asp-for="ONLINE_ORDER">
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-md-2 control-label" style="padding-left:0px">Loại</label>
                            <div class="col-md-10">
                                <div class="col-md-3">
                                    @Html.RadioButtonFor(model => model.ONLINE_TYPE, "0", new { id = 0, @checked = "checked", @class = "radio" })
                                    Không hiển thị
                                </div>
                                <div class="col-md-3">
                                    @Html.RadioButtonFor(model => model.ONLINE_TYPE, "1", new { id = 1, @checked = "checked", @class = "radio" })
                                    Hiện thị hỗ trợ
                                </div>
                                <div class="col-md-3">
                                    @Html.RadioButtonFor(model => model.ONLINE_TYPE, "2", new { id = 2, @checked = "checked", @class = "radio" })
                                    Hiển thị mạng xã hội
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Hình ảnh</label>
                            <input type="file" asp-for="ONLINE_IMAGE">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
