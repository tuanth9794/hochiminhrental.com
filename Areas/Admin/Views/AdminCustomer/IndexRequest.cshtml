@model IEnumerable<CoreCnice.Domain.ESHOP_CUSTOMER>

@{
    var defaultGridPageSize = 20;
    //page title
    ViewData["Title"] = "KHÁCH HÀNG GỬI YÊU CẦU";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-header clearfix">
    <h1 class="pull-left">
      KHÁCH HÀNG GỬI YÊU CẦU
    </h1>
    <div class="pull-right">
        <a href="/Admin/@Url.Action("Create")" class="btn btn-social btn-bitbucket btn-xs"> <i class="fa fa-plus-square"></i>THÊM MỚI</a>
    </div>
</div>
<div class="content">
    <div id="example">
        <div id="grid"></div>
        <script>
            $(document).ready(function() {
                $("#grid").kendoGrid({
                    dataSource: {
                        type: "json",
                        transport: {
                            read: "/Admin/AdminCustomer/CustomerListRequest/@ViewBag.CusId"
                                        },
                        pageSize: @(defaultGridPageSize)
                                    },
                                    scrollable: true,
                    groupable: true,
                    sortable: true,
                    selectable: true,
                    navigatable: true,
                    filterable: true,
                    pageable: {
                        refresh: true,
                        pageSizes: true,
                        buttonCount: 5
                    },
                    columns: [{
                        field: "customer_Name",
                        title: "Tên khách hàng",
                    }, {
                        field: "customer_Phone",
                        title: "Số điện thoại",
                        filterable: {
                            multi: true,
                            search: true
                        }
                    }, {
                        field: "customer_DuAn",
                        title: "Dự án",
                        filterable: {
                            multi: true,
                            search: true
                        }
                    },
                    {
                        field: "customer_PN ",
                        title: "PN",
                        filterable: {
                            multi: true,
                            search: true
                        }
                    }, {
                        field: "customer_Dt ",
                        title: "DT",
                        filterable: {
                            multi: true,
                            search: true
                        }
                    }, {
                        field: "customer_NS ",
                        title: "Ngân sách",
                        filterable: {
                            multi: true,
                            search: true
                        }
                    },{
                        field: "customer_TimeAv",
                        title: "Ngày thuê",
                        type: "date",
                        format: "{0:dd-MM-yyyy}",
                    },{
                        field: "customer_PublishDate",
                        title: "Ngày gửi",
                        type: "date",
                        format: "{0:dd-MM-yyyy}",
                    }, {
                        field: "newS_ID",
                        title: "Xem thông tin",
                        headerAttributes: { style: "text-align:center" },
                        attributes: { style: "text-align:center" },
                        template: '<a href="/Admin/AdminCustomer/RequestEdit/#=customer_request_id#" class="btn btn-social btn-info btn-xs"><i class="fa fa-pencil" ></i> Xem chi tiết</a>',
                        width: 150
                    }]
                });
            });
        </script>
    </div>
</div>
<style type="text/css">
    .customer-photo {
        display: inline-block;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background-size: 32px 35px;
        background-position: center center;
        vertical-align: middle;
        line-height: 32px;
        box-shadow: inset 0 0 1px #999, inset 0 0 10px rgba(0,0,0,.2);
        margin-left: 5px;
    }

    .customer-name {
        display: inline-block;
        vertical-align: middle;
        line-height: 32px;
        padding-left: 3px;
    }
</style>

